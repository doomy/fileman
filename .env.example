# ==============================================
# FileMan - Environment Configuration Template
# ==============================================
# Copy this file to .env and configure for your environment
# DO NOT commit .env to version control

# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_ENV=development
APP_DEBUG=true
APP_NAME="FileMan"

# ==============================================
# BACKEND (PHP API) CONFIGURATION
# ==============================================

# Upload Directory (relative to backend/storage or absolute path)
UPLOAD_DIR=storage/uploads

# Maximum upload file size in bytes (50MB default)
MAX_FILE_SIZE=52428800

# Allowed file types (comma-separated MIME types or extensions)
# Examples: image/jpeg,image/png,application/pdf,text/plain
# Use * to allow all types (NOT RECOMMENDED for production)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain,text/csv,application/json

# Blocked file types (comma-separated extensions) - takes precedence over ALLOWED_FILE_TYPES
BLOCKED_FILE_TYPES=exe,sh,bat,cmd,php,js,py,rb

# Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=3600

# Session configuration (if using sessions instead of JWT)
SESSION_LIFETIME=7200
SESSION_SECURE=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Database (if needed in future)
# DB_CONNECTION=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=fileman
# DB_USERNAME=root
# DB_PASSWORD=

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# Backend API URL
VITE_API_URL=http://localhost:8080/api

# Application Settings
VITE_APP_NAME=FileMan
VITE_MAX_UPLOAD_SIZE=52428800

# Feature Flags
VITE_ENABLE_THUMBNAILS=true
VITE_ENABLE_SEARCH=true
VITE_DEFAULT_VIEW=list

# ==============================================
# DOCKER CONFIGURATION
# ==============================================

# Port mappings
FRONTEND_PORT=3000
BACKEND_PORT=8080
NGINX_PORT=80
NGINX_SSL_PORT=443

# Docker volumes
UPLOAD_VOLUME=./backend/storage/uploads

# ==============================================
# SECURITY SETTINGS
# ==============================================

# Enable authentication (true/false)
AUTH_ENABLED=true

# Rate limiting (requests per minute)
RATE_LIMIT=60

# Maximum concurrent uploads
MAX_CONCURRENT_UPLOADS=3

# ==============================================
# PERFORMANCE SETTINGS
# ==============================================

# Enable PHP OPcache (production)
PHP_OPCACHE_ENABLE=1

# Enable PHP JIT (production)
PHP_JIT_ENABLE=1

# File pagination (number of files per page)
FILES_PER_PAGE=50

# Thumbnail cache duration (seconds)
THUMBNAIL_CACHE_DURATION=86400

# ==============================================
# LOGGING
# ==============================================

LOG_LEVEL=debug
LOG_CHANNEL=daily

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Hot reload for frontend
VITE_HMR_HOST=localhost
VITE_HMR_PORT=3000

# PHP Debug
PHP_XDEBUG_ENABLE=0
PHP_XDEBUG_MODE=develop,debug
PHP_XDEBUG_CLIENT_HOST=host.docker.internal
PHP_XDEBUG_CLIENT_PORT=9003
